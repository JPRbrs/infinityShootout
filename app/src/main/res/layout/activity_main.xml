<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="infinityshootout.screamstudios.com.infinityshootout.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ListView
        android:id="@+id/listview"
        android:layout_width="357dp"
        android:layout_height="382dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/add_ARO"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="@string/addARO_BT_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shootBT"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/remove_ARO"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="@string/removeARO_BT_text"
        app:layout_constraintLeft_toRightOf="@+id/add_ARO"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shootBT"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/shootBT"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="@string/shoot_BT"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/listview"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
